<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#013369</item>
    </style>

    <style name="ButtonStyle1" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">#AA0000</item>
        <item name="android:background">#AA0000</item>
        <item name="android:textColor">#B3995E</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle2" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">#101820</item>
        <item name="android:background">#101820</item>
        <item name="android:textColor">#A5ACAF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle3" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">#013369</item>
        <item name="android:background">#013369</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
